#h dyeterh ekdoxh
 tm_dtm <- function(text){
   dtm <- tm::DocumentTermMatrix(tm::VCorpus(
     tm::VectorSource(text)),
     control = list(wordLengths = c(1, Inf)))
 }
 dtm <- DocumentTermMatrix(imdbdata$review)
 
 dtm
 
